{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Build Project",
          "runtimeExecutable": "node",
          "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
          "args": ["src/server.ts"],
          "cwd": "${workspaceRoot}",
          "internalConsoleOptions": "openOnSessionStart",
          "skipFiles": [
            "<node_internals>/**", "node_modules/**"
          ]
      }
  ]
}